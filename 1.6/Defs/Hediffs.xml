<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef ParentName="DiseaseBase">
        <defName>USH_CyberspaceNausea</defName>
        <label>cyberspace nausea</label>
        <description>Intense nausea caused by a security system encounter inside cyberspace.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>5000~12000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
        </comps>
        <stages>
            <li>
                <vomitMtbDays>0.125</vomitMtbDays>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="DiseaseBase">
        <defName>USH_CyberspaceComa</defName>
        <label>cyberspace coma</label>
        <description>A form of benign coma during which the brain recovers from an intensive encounter inside cyberspace.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>7500~12000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="DiseaseBase">
        <defName>USH_CyberspaceLockOut</defName>
        <label>cyberspace lockout</label>
        <description>A digital print blocking user's access to cyberspace.</description>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>5000~12000</disappearsAfterTicks>
                <showRemainingTime>true</showRemainingTime>
            </li>
        </comps>
        <stages>
            <li>
                <statFactors>
                    <HackingSpeed>0</HackingSpeed>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <HediffDef ParentName="DiseaseBase">
        <defName>USH_Disrupted</defName>
        <label>hivemind disruption</label>
        <labelNoun>a hivemind disruption</labelNoun>
        <description>A significant loss of synchronization between the mech and it's hivemind.</description>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <postFactor>0.75</postFactor>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>0.9</postFactor>
                    </li>
                </capMods>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>120</disappearsAfterTicks>
                <showRemainingTime>false</showRemainingTime>
            </li>
        </comps>
    </HediffDef>

</Defs>