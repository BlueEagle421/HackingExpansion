<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <StatDef>
        <defName>USH_ResearchValue</defName>
        <label>research points value</label>
        <description>How many research points will be distributed after utilizing this item on an active project.</description>
        <category>USH_Hacker</category>
        <defaultBaseValue>0</defaultBaseValue>
        <minValue>0</minValue>
        <toStringStyle>Integer</toStringStyle>
        <hideAtValue>0</hideAtValue>
        <displayPriorityInCategory>4020</displayPriorityInCategory>
        <forInformationOnly>true</forInformationOnly>
    </StatDef>

    <StatDef>
        <defName>USH_RippingWorkAmount</defName>
        <label>Ripping work amount</label>
        <description>How much hacking work must be done on a device to acquire this item.</description>
        <category>USH_Hacker</category>
        <defaultBaseValue>0</defaultBaseValue>
        <minValue>0</minValue>
        <toStringStyle>Integer</toStringStyle>
        <hideAtValue>0</hideAtValue>
        <displayPriorityInCategory>4020</displayPriorityInCategory>
        <forInformationOnly>true</forInformationOnly>
    </StatDef>

    <ThingDef Name="USH_CyberdataBase" ParentName="ResourceBase" Abstract="True">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <stackLimit>50</stackLimit>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <Mass>0.8</Mass>
            <Flammability>0.6</Flammability>
            <DeteriorationRate>2.0</DeteriorationRate>
        </statBases>
        <intricate>true</intricate>
        <thingCategories>
            <li>Manufactured</li>
        </thingCategories>
        <tradeTags>
            <li>ExoticMisc</li>
        </tradeTags>
        <tradeability>Sellable</tradeability>
        <allowedArchonexusCount>5</allowedArchonexusCount>
    </ThingDef>

    <ThingDef ParentName="USH_CyberdataBase">
        <defName>USH_Cyberdata</defName>
        <label>cyberdata</label>
        <description>A special device that can store instructions, code, drivers, malicious software, and other programs.\n\nIt can be ripped from various electronics.</description>
        <graphicData>
            <texPath>Things/Item/Cyberdata</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>50</MarketValue>
            <USH_ResearchValue>15</USH_ResearchValue>
            <USH_RippingWorkAmount>25</USH_RippingWorkAmount>
        </statBases>
        <comps>
            <li Class="USH_HE.CompProperties_ResearchGiver">
                <points>15</points>
            </li>
        </comps>
        <modExtensions>
            <li Class="USH_HE.RippableExtension">
                <hackWorkAmount>1500</hackWorkAmount>
                <maxPerDataSourceRange>8~16</maxPerDataSourceRange>
            </li>
            <li Class="USH_HE.ResearchPrerequisitesExtension">
                <researchPrerequisites>
                    <li>USH_BasicCybertech</li>
                </researchPrerequisites>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="USH_CyberdataBase">
        <defName>USH_AdvancedCyberdata</defName>
        <label>advanced cyberdata</label>
        <description>A spacer device with remarkable storage capacity and an onboard data analysis module that organizes and summarizes collected knowledge.\n\nIt can be ripped from various electronics.</description>
        <graphicData>
            <texPath>Things/Item/AdvancedCyberdata</texPath>
        </graphicData>
        <statBases>
            <MarketValue>170</MarketValue>
            <USH_ResearchValue>100</USH_ResearchValue>
            <USH_RippingWorkAmount>250</USH_RippingWorkAmount>
        </statBases>
        <comps>
            <li Class="USH_HE.CompProperties_ResearchGiver">
                <points>100</points>
            </li>
        </comps>
        <modExtensions>
            <li Class="USH_HE.RippableExtension">
                <hackWorkAmount>15000</hackWorkAmount>
                <maxPerDataSourceRange>2~5</maxPerDataSourceRange>
            </li>
            <li Class="USH_HE.ResearchPrerequisitesExtension">
                <researchPrerequisites>
                    <li>USH_AdvancedCybertech</li>
                </researchPrerequisites>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="USH_CyberdataBase">
        <defName>USH_BrokenExecData</defName>
        <label>broken exec data</label>
        <description>A spacer-tech diskette that once contained a powerful executable. It can be salvaged for its components or restored and used as a holding cell for a new exec.\n\nIt drops from ripped, hackable devices secured by ICE or ICE variants.</description>
        <descriptionHyperlinks>
            <USH_HE.HacksetDef>USH_ICE</USH_HE.HacksetDef>
            <USH_HE.HacksetDef>USH_CoreCommandICE</USH_HE.HacksetDef>
            <USH_HE.HacksetDef>USH_BlackICE</USH_HE.HacksetDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Item/BrokenExecData</texPath>
        </graphicData>
        <statBases>
            <MarketValue>30</MarketValue>
            <USH_ResearchValue>150</USH_ResearchValue>
        </statBases>
        <comps>
            <li Class="USH_HE.CompProperties_ResearchGiver">
                <points>150</points>
            </li>
        </comps>
        <modExtensions>
            <li Class="USH_HE.ResearchPrerequisitesExtension">
                <researchPrerequisites>
                    <li>USH_ExecData</li>
                </researchPrerequisites>
            </li>
        </modExtensions>
    </ThingDef>

</Defs>