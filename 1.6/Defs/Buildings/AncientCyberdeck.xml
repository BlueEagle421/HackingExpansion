<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef Name="USH_AncientCyberdeckBase" ParentName="BuildingBase" Abstract="True">
        <noRightClickDraftAttack>true</noRightClickDraftAttack>
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <texPath>Things/Building/Misc/AncientTerminal/AncientTerminal</texPath>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
            <shadowData>
                <volume>(0.55, 0.30, 0.40)</volume>
            </shadowData>
        </graphicData>
        <size>(1,1)</size>
        <fillPercent>0.20</fillPercent>
        <altitudeLayer>Building</altitudeLayer>
        <defaultPlacingRot>South</defaultPlacingRot>
        <hasInteractionCell>true</hasInteractionCell>
        <interactionCellOffset>(0,0,1)</interactionCellOffset>
        <building>
            <claimable>false</claimable>
        </building>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToBuild>1000</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
    </ThingDef>


    <ThingDef ParentName="USH_AncientCyberdeckBase">
        <defName>USH_AncientCyberdeck</defName>
        <label>ancient cyberdeck</label>
        <description>An ancient cyberdeck mostly worn out, but with well-preserved inner contents. Hack it to open it's internal neural port.</description>
        <graphicData>
            <texPath>Things/Building/AncientCyberdeck/AncientCyberdeck</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
        </graphicData>
        <comps Inherit="False">
            <li Class="USH_HE.CompProperties_AncientCyberdeckHackable">
                <defence>15000</defence>
                <effectHacking>HackingTerminal</effectHacking>
                <notHackedInspectString>Hack to open.</notHackedInspectString>
            </li>
            <li Class="CompProperties_ThrownFleckEmitter">
                <fleck>TerminalScreenLensFlare</fleck>
                <offsetMin>(-0.3,0,0.35)</offsetMin>
                <offsetMax>(0.3,0,0.35)</offsetMax>
                <emissionInterval>90</emissionInterval>
                <scale>1~1.1</scale>
                <colorA>(53,203,237,255)</colorA>
                <colorB>(53,203,237,255)</colorB>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>4</glowRadius>
                <glowColor>(53,203,237,0)</glowColor>
            </li>
            <li Class="CompProperties_ProximityLetter">
                <radius>8</radius>
                <letterDef>PositiveEvent</letterDef>
                <letterLabel>Ancient cyberdeck</letterLabel>
                <letterText>{PAWN_nameDef} has noticed an ancient cyberdeck nearby.\n\nIt appears to be used recently and left in a hurry.</letterText>
            </li>
        </comps>
        <tickerType>Normal</tickerType>
    </ThingDef>

</Defs>